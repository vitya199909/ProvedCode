pipeline {
    agent any

    stages {
        stage('Deploy') {
            steps {
                sshagent(credentials: ['deploy-ssh-gcp']) {
                    sh '''
                    ssh -o StrictHostKeyChecking=no viktor@10.1.11.97 "
                      cd /home/viktor/ProvedCode/App_Docker_Compose/frontend/provedcode-frontend-viktor &&
                      git pull &&
                      cd /home/viktor/ProvedCode/App_Docker_Compose/backend/provedcode-backend-viktor &&
                      git pull &&
                      cd /home/viktor/ProvedCode/App_Docker_Compose &&
                      docker compose down &&
                      docker compose up -d --build
                    "
                    '''
                }
            }
        }
    }
}
