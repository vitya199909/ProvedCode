pipeline {
    agent any

    stages {
        stage('Checkout Submodules') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'github-credentials', usernameVariable: 'GIT_USERNAME', passwordVariable: 'GIT_PASSWORD')]) {
                    sh '''
                        git config --global credential.helper store
                        echo "https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com" > ~/.git-credentials
                        git submodule sync --recursive
                        git submodule update --init --recursive
                    '''
                }
            }
        }

        stage('Code Inspection - Backend') {
            steps {
                dir('App_Docker_Compose/backend/provedcode-backend-vitya199909') {
                    withSonarQubeEnv('SonarQube') {
                        sh '''
                            mvn clean verify sonar:sonar \
                              -Dsonar.host.url=http://sonarqube:9000 \
                              -Dsonar.projectKey=provedcode-backend \
                              -Dsonar.projectName='ProvedCode Backend'
                        '''
                    }
                }
            }
        }

        stage('Code Inspection - Frontend') {
            steps {
                dir('App_Docker_Compose/frontend/provedcode-frontend-vitya199909') {
                    sh '''
                        npm install
                        npm run lint || echo 'ESLint warnings found but continuing...'
                    '''
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    script {
                        try {
                            waitForQualityGate abortPipeline: false
                        } catch (Exception e) {
                            echo "⚠️ Quality Gate check failed: ${e.message}"
                            echo "ℹ️ Please update SonarQube server URL in Jenkins:"
                            echo "   Manage Jenkins → Configure System → SonarQube servers"
                            echo "   Change URL from http://10.1.11.97:9000 to http://sonarqube:9000"
                        }
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                sshagent(credentials: ['deploy-ssh']) {
                    sh '''
                    ssh -p 2222 -o StrictHostKeyChecking=no viktor@10.1.11.97 "
                      cd /home/viktor/ProvedCode/App_Docker_Compose/frontend/provedcode-frontend-vitya199909 &&
                      git pull &&
                      cd /home/viktor/ProvedCode/App_Docker_Compose/backend/provedcode-backend-vitya199909 &&
                      git pull &&
                      cd /home/viktor/ProvedCode/App_Docker_Compose &&
                      docker compose down &&
                      docker compose up -d --build
                    "
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully! ✅'
        }
        failure {
            echo 'Pipeline failed! ❌ Check logs for details.'
        }
    }
}
