pipeline {
    agent any

    stages {
        stage('Checkout Submodules') {
            steps {
                withCredentials([usernamePassword(credentialsId: 'github-credentials', usernameVariable: 'GIT_USERNAME', passwordVariable: 'GIT_PASSWORD')]) {
                    sh '''
                        git config --global credential.helper store
                        echo "https://${GIT_USERNAME}:${GIT_PASSWORD}@github.com" > ~/.git-credentials
                        git submodule sync --recursive
                        git submodule update --init --recursive
                    '''
                }
            }
        }

        stage('Code Inspection - Backend') {
            steps {
                dir('App_Docker_Compose/backend/provedcode-backend-vitya199909') {
                    withSonarQubeEnv('SonarQube') {
                        sh '''
                            mvn clean verify sonar:sonar \
                              -Dsonar.host.url=http://sonarqube:9000 \
                              -Dsonar.projectKey=provedcode-backend \
                              -Dsonar.projectName='ProvedCode Backend'
                        '''
                    }
                }
            }
        }

        stage('Code Inspection - Frontend') {
            steps {
                dir('App_Docker_Compose/frontend/provedcode-frontend-vitya199909') {
                    withSonarQubeEnv('SonarQube') {
                        sh '''
                            npm install
                            npm run lint || echo 'ESLint warnings found but continuing...'
                            npx sonar-scanner \
                              -Dsonar.host.url=http://sonarqube:9000 \
                              -Dsonar.projectKey=provedcode-frontend \
                              -Dsonar.projectName='ProvedCode Frontend'
                        '''
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                timeout(time: 5, unit: 'MINUTES') {
                    script {
                        try {
                            waitForQualityGate abortPipeline: false
                        } catch (Exception e) {
                            echo "‚ö†Ô∏è Quality Gate check failed: ${e.message}"
                            echo "‚ÑπÔ∏è Please update SonarQube server URL in Jenkins:"
                            echo "   Manage Jenkins ‚Üí Configure System ‚Üí SonarQube servers"
                            echo "   Change URL from http://10.1.11.97:9000 to http://sonarqube:9000"
                        }
                    }
                }
            }
        }

        stage('Build & Publish Artifacts') {
            steps {
                script {
                    // Maven artifact
                    dir('App_Docker_Compose/backend/provedcode-backend-vitya199909') {
                        sh '''
                            mvn deploy -DskipTests -s /var/jenkins_home/maven-settings.xml
                        '''
                    }
                    
                    // Docker images
                    def version = sh(
                        script: "cd App_Docker_Compose/backend/provedcode-backend-vitya199909 && mvn help:evaluate -Dexpression=project.version -q -DforceStdout",
                        returnStdout: true
                    ).trim()
                    
                    echo "üì¶ Building version: ${version}"
                    
                    sh """
                        cd App_Docker_Compose
                        docker compose build
                        docker tag myapp-backend:latest nexus:8083/myapp-backend:${version}
                        docker tag myapp-backend:latest nexus:8083/myapp-backend:latest
                        docker tag myapp-frontend:latest nexus:8083/myapp-frontend:${version}
                        docker tag myapp-frontend:latest nexus:8083/myapp-frontend:latest
                        
                        echo 'admin123' | docker login nexus:8083 -u admin --password-stdin
                        docker push nexus:8083/myapp-backend:${version}
                        docker push nexus:8083/myapp-backend:latest
                        docker push nexus:8083/myapp-frontend:${version}
                        docker push nexus:8083/myapp-frontend:latest
                    """
                }
            }
        }

        stage('Deploy') {
            steps {
                sshagent(credentials: ['deploy-ssh']) {
                    sh '''
                    ssh -p 2222 -o StrictHostKeyChecking=no viktor@10.1.11.97 "
                      cd /home/viktor/ProvedCode/App_Docker_Compose/frontend/provedcode-frontend-vitya199909 &&
                      git pull &&
                      cd /home/viktor/ProvedCode/App_Docker_Compose/backend/provedcode-backend-vitya199909 &&
                      git pull &&
                      cd /home/viktor/ProvedCode/App_Docker_Compose &&
                      docker compose down &&
                      docker compose up -d --build
                    "
                    '''
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully! ‚úÖ'
        }
        failure {
            echo 'Pipeline failed! ‚ùå Check logs for details.'
        }
    }
}
