# Spring Boot Configuration
spring.application.name={{ app_name }}

# Server Configuration
server.port={{ app_port }}
server.servlet.context-path=/

# Database Configuration
spring.datasource.url=jdbc:postgresql://{{ db_host }}:{{ db_port }}/{{ db_name }}
spring.datasource.username={{ db_user }}
spring.datasource.password={{ db_password }}
spring.datasource.driver-class-name=org.postgresql.Driver

# JPA Configuration
spring.jpa.hibernate.ddl-auto=update
spring.jpa.show-sql=false
spring.jpa.properties.hibernate.dialect=org.hibernate.dialect.PostgreSQLDialect
spring.jpa.properties.hibernate.format_sql=true

# Logging
logging.level.root=INFO
logging.level.com.provedcode={{ lookup('env', 'LOG_LEVEL') | default('INFO', true) }}
logging.file.name={{ backend_deploy_dir }}/application.log
logging.pattern.console=%d{yyyy-MM-dd HH:mm:ss} - %msg%n

# Actuator
management.endpoints.web.exposure.include=health,info,metrics
management.endpoint.health.show-details=when-authorized
# Spring Profile
spring.profiles.active={{ spring_profile | default('prod', true) }}

# AWS S3 Configuration
cloud.aws.credentials.access-key={{ s3_access_key | default('test', true) }}
cloud.aws.credentials.secret-key={{ s3_secret_key | default('test', true) }}
cloud.aws.region.static={{ s3_region | default('us-west-1', true) }}
cloud.aws.stack.auto=false
cloud.aws.s3.bucket={{ s3_bucket | default('my-bucket', true) }}

# Email Configuration
spring.mail.username={{ email_user | default('', true) }}
spring.mail.password={{ email_password | default('', true) }}
